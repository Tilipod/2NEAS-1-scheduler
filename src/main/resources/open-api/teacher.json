{
  "swagger": "2.0",
  "info": {
    "description": "Учитель, отвечающий за обучение нейронных сетей",
    "version": "0.0.1",
    "title": "2NEAS-1-teacher"
  },
  "host": "localhost:50005",
  "basePath": "/",
  "tags": [
    {
      "name": "training-controller",
      "description": "Контроллер для обучения нейронных сетей"
    }
  ],
  "paths": {
    "/training/training/step": {
      "post": {
        "tags": [
          "training-controller"
        ],
        "summary": "Провести обучение нейронной сети",
        "operationId": "stepTrainingUsingPOST",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "*/*"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "trainingDto",
            "description": "trainingDto",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TrainingDto"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "deprecated": false
      }
    }
  },
  "definitions": {
    "TrainingDto": {
      "type": "object",
      "required": [
        "countEpoch",
        "countOutput",
        "datasetType",
        "pathToDataset",
        "pathToModel",
        "taskId"
      ],
      "properties": {
        "countEpoch": {
          "type": "integer",
          "format": "int32",
          "description": "Кол-во эпох для обучения"
        },
        "countOutput": {
          "type": "integer",
          "format": "int32",
          "description": "Кол-во выходов нейронной сети"
        },
        "datasetType": {
          "type": "string",
          "description": "Тип данных для обучения сети",
          "enum": [
            "IMAGE"
          ]
        },
        "pathToDataset": {
          "type": "string",
          "description": "Путь к датасетам для обучения"
        },
        "pathToModel": {
          "type": "string",
          "description": "Путь к модели сети"
        },
        "taskId": {
          "type": "integer",
          "format": "int32",
          "description": "ID задачи"
        }
      },
      "title": "TrainingDto"
    }
  }
